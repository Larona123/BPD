<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- ===================== -->
    <!-- CLIENT TABLE -->
    <!-- ===================== -->
    <changeSet id="001" author="pramodimo">
        <createTable tableName="client">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="VARCHAR(100)" />
            <column name="phone" type="VARCHAR(30)" />
            <column name="company_name" type="VARCHAR(100)" />
        </createTable>
    </changeSet>

    <!-- ===================== -->
    <!-- PROJECT TABLE -->
    <!-- ===================== -->
    <changeSet id="002" author="pramodimo">
        <createTable tableName="project">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(150)">
                <constraints nullable="false" />
            </column>
            <column name="budget" type="NUMERIC(12,2)" />
            <column name="description" type="TEXT" />
            <column name="start_date" type="DATE" />
            <column name="end_date" type="DATE" />
            <column name="client_id" type="INT" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="project"
                baseColumnNames="client_id"
                constraintName="fk_project_client"
                referencedTableName="client"
                referencedColumnNames="id"
                onDelete="SET NULL" />
    </changeSet>

    <!-- ===================== -->
    <!-- PERFORMANCE TABLE -->
    <!-- ===================== -->
    <changeSet id="003" author="pramodimo">
        <createTable tableName="performance">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="planned_expenditure" type="NUMERIC(12,2)" />
            <column name="actual_expenditure" type="NUMERIC(12,2)" />
            <column name="planned_schedule" type="NUMERIC(5,2)" />
            <column name="actual_schedule" type="NUMERIC(5,2)" />
            <column name="project_id" type="INT" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="performance"
                baseColumnNames="project_id"
                constraintName="fk_performance_project"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="CASCADE" />

        <addUniqueConstraint
                tableName="performance"
                columnNames="project_id"
                constraintName="uq_performance_project" />
    </changeSet>

    <!-- ===================== -->
    <!-- RISK TABLE -->
    <!-- ===================== -->
    <changeSet id="004" author="pramodimo">
        <createTable tableName="risk">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="impact" type="VARCHAR(50)" />
            <column name="likelihood" type="VARCHAR(50)" />
            <column name="project_id" type="INT" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="risk"
                baseColumnNames="project_id"
                constraintName="fk_risk_project"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="CASCADE" />
    </changeSet>

    <!-- ===================== -->
    <!-- ISSUE TABLE -->
    <!-- ===================== -->
    <changeSet id="005" author="pramodimo">
        <createTable tableName="issue">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="severity" type="VARCHAR(50)" />
            <column name="status" type="VARCHAR(50)" />
            <column name="project_id" type="INT" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="issue"
                baseColumnNames="project_id"
                constraintName="fk_issue_project"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="CASCADE" />
    </changeSet>

    <!-- ===================== -->
    <!-- RESOURCE TABLE -->
    <!-- ===================== -->
    <changeSet id="006" author="pramodimo">
        <createTable tableName="resource">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
            <column name="project_id" type="INT" />
            <column name="dtype" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="resource"
                baseColumnNames="project_id"
                constraintName="fk_resource_project"
                referencedTableName="project"
                referencedColumnNames="id"
                onDelete="CASCADE" />
    </changeSet>

    <!-- ===================== -->
    <!-- HUMAN RESOURCE -->
    <!-- ===================== -->
    <changeSet id="007" author="pramodimo">
        <createTable tableName="human_resource">
            <column name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="role" type="VARCHAR(100)" />
            <column name="hourly_rate" type="NUMERIC(10,2)" />
            <column name="hours_allocated" type="INT" />
            <column name="start_date" type="DATE" />
            <column name="end_date" type="DATE" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="human_resource"
                baseColumnNames="id"
                constraintName="fk_human_resource_resource"
                referencedTableName="resource"
                referencedColumnNames="id"
                onDelete="CASCADE" />
    </changeSet>

    <!-- ===================== -->
    <!-- HARDWARE RESOURCE -->
    <!-- ===================== -->
    <changeSet id="008" author="pramodimo">
        <createTable tableName="hardware_resource">
            <column name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="vendor" type="VARCHAR(100)" />
            <column name="serial_number" type="VARCHAR(100)" />
            <column name="under_warranty" type="BOOLEAN" />
            <column name="allocation_date" type="DATE" />
            <column name="return_date" type="DATE" />
        </createTable>

        <addForeignKeyConstraint
                baseTableName="hardware_resource"
                baseColumnNames="id"
                constraintName="fk_hardware_resource_resource"
                referencedTableName="resource"
                referencedColumnNames="id"
                onDelete="CASCADE" />
    </changeSet>

</databaseChangeLog>
